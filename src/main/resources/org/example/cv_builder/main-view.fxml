<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="650.0" prefWidth="1000.0" styleClass="root" stylesheets="@styles/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.cv_builder.MainController">


   <left>
      <VBox alignment="TOP_LEFT" prefHeight="650.0" spacing="12.0" styleClass="sidebar" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="sidebar-title" text="CV Builder">
               <VBox.margin>
                  <Insets bottom="12.0" />
               </VBox.margin>
            </Label>
            <Button maxWidth="Infinity" onAction="#handleSidebarDashboard" styleClass="nav-button, nav-button-selected" text="Dashboard" />
            <Button maxWidth="Infinity" onAction="#handleSidebarCreate" styleClass="nav-button" text="Create" />
         </children>
         <padding>
            <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
         </padding>
      </VBox>
   </left>

   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" prefWidth="790.0" styleClass="dashboard-header">
               
               <children>
                  <ImageView fitHeight="250.0" fitWidth="790.0" pickOnBounds="true" preserveRatio="false">
                     <image>
                        <Image url="@assets/banner.png" />
                     </image></ImageView>
               </children>
            </VBox>
            
            <VBox alignment="TOP_LEFT" spacing="24.0">
               <children>
                  <HBox spacing="20.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleCreateNewCv" styleClass="action-card-button">
                           <graphic>
                              <VBox alignment="CENTER" spacing="6.0">
                                 <children>
                                    <Label styleClass="action-icon" text="+" />
                                    <Label styleClass="action-title" text="Create New CV" />
                                    <Label styleClass="action-description" text="Start building yours" textAlignment="CENTER" wrapText="true" />
                                 </children>
                              </VBox>
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
