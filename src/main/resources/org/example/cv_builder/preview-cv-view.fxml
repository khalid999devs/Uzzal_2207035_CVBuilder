<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="650.0" prefWidth="1000.0" styleClass="root" stylesheets="@styles/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.cv_builder.PreviewCVController">
   <left>
      <VBox alignment="TOP_LEFT" prefHeight="650.0" spacing="12.0" styleClass="sidebar" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="sidebar-title" text="CV Builder">
               <VBox.margin>
                  <Insets bottom="12.0" />
               </VBox.margin>
            </Label>
            <Button maxWidth="Infinity" onAction="#handleSidebarDashboard" styleClass="nav-button" text="Dashboard" />
            <Button maxWidth="Infinity" onAction="#handleSidebarCreate" styleClass="nav-button, nav-button-selected" text="Create" />
         </children>
         <padding>
            <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" styleClass="preview-header" VBox.vgrow="NEVER">
               <children>
                  <Label styleClass="card-title" text="Preview CV" />
                  <Region HBox.hgrow="ALWAYS" />
                  <HBox spacing="12.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleBackToEdit" styleClass="edit-button" text="Edit CV" />
                        <Button mnemonicParsing="false" onAction="#handleDeleteCV" styleClass="delete-button" text="Delete CV" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="24.0" left="40.0" right="40.0" top="24.0" />
               </padding>
            </HBox>
            
            <ScrollPane fitToWidth="true" styleClass="scroll-pane" VBox.vgrow="ALWAYS">
               <content>
                  <VBox styleClass="cv-document">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="30.0" styleClass="cv-header">
                           <children>
                              <VBox alignment="CENTER_LEFT" spacing="6.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label fx:id="nameLabel" styleClass="cv-name" />
                                    <VBox spacing="4.0" styleClass="contact-details">
                                       <children>
                                          <HBox spacing="5.0">
                                             <children>
                                                <Label styleClass="contact-label" text="Email:" />
                                                <Label fx:id="emailLabel" styleClass="contact-value" />
                                             </children>
                                          </HBox>
                                          <HBox spacing="5.0">
                                             <children>
                                                <Label styleClass="contact-label" text="Phone:" />
                                                <Label fx:id="phoneLabel" styleClass="contact-value" />
                                             </children>
                                          </HBox>
                                          <HBox spacing="5.0">
                                             <children>
                                                <Label styleClass="contact-label" text="Address:" />
                                                <Label fx:id="addressLabel" styleClass="contact-value" wrapText="true" />
                                             </children>
                                          </HBox>
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>
                              <ImageView fx:id="photoImageView" fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true" styleClass="cv-photo" />
                           </children>
                           <padding>
                              <Insets bottom="30.0" left="40.0" right="40.0" top="24" />
                           </padding>
                        </HBox>
                        
                        <VBox spacing="12.0" styleClass="cv-section">
                           <children>
                              <Label styleClass="cv-section-title" text="Education" />
                              <Label fx:id="educationLabel" wrapText="true" styleClass="cv-content" />
                           </children>
                           <padding>
                              <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
                           </padding>
                        </VBox>
                        
                        <VBox spacing="12.0" styleClass="cv-section">
                           <children>
                              <Label styleClass="cv-section-title" text="Skills" />
                              <Label fx:id="skillsLabel" wrapText="true" styleClass="cv-content" />
                           </children>
                           <padding>
                              <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
                           </padding>
                        </VBox>
                        
                        <VBox spacing="12.0" styleClass="cv-section">
                           <children>
                              <Label styleClass="cv-section-title" text="Work Experience" />
                              <Label fx:id="workExperienceLabel" wrapText="true" styleClass="cv-content" />
                           </children>
                           <padding>
                              <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
                           </padding>
                        </VBox>
                        
                        <VBox spacing="12.0" styleClass="cv-section">
                           <children>
                              <Label styleClass="cv-section-title" text="Projects" />
                              <Label fx:id="projectsLabel" wrapText="true" styleClass="cv-content" />
                           </children>
                           <padding>
                              <Insets bottom="30.0" left="40.0" right="40.0" top="20.0" />
                           </padding>
                        </VBox>
                     </children>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </center>
</BorderPane>
